<mvc:View controllerName="sap.ui.webc.main.sample.StepInput.C" xmlns="sap.ui.webc.main" xmlns:fiori="sap.ui.webc.fiori" xmlns:mvc="sap.ui.core.mvc" height="100%">
    <Toast id="demoToast" duration="1000"></Toast>

    <fiori:Page>
        <fiori:header>
            <fiori:Bar>
                <fiori:middleContent>
                    <Title text="StepInput"></Title>
                </fiori:middleContent>
            </fiori:Bar>
        </fiori:header>

        <fiori:content>
            <StepInput placeholder="This is my placeholder value" valueState="Warning" valueStateMessage="Value State Message" change="handleChange"></StepInput>
        </fiori:content>
    </fiori:Page>
</mvc:View>