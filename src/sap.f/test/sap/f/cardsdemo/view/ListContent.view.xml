<mvc:View
	controllerName="sap.f.cardsdemo.controller.ListContent"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:w="sap.ui.integration.widgets"
	displayBlock="true">
	<Page title="{i18n>appTitle}">
		<subHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<Title text="List Card" />
				<ToolbarSpacer/>
			</Toolbar>
		</subHeader>

		<SegmentedButton
			selectedKey="cozy"
			selectionChange=".onFormFactorChange"
			class="VizTestDensityBtn sapUiSmallMargin">
			<items>
				<SegmentedButtonItem text="Cozy" key="cozy" />
				<SegmentedButtonItem text="Compact" key="compact" />
			</items>
		</SegmentedButton>

		<f:GridContainer class="sapUiSmallMargin">
			<w:Card id="card1" baseUrl="./" manifest="{listContentManifests>/tasksContent}">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="3" />
				</w:layoutData>
			</w:Card>
			<w:Card id="card2" baseUrl="./" manifest="{listContentManifests>/listWithAvatars}">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="3" />
				</w:layoutData>
			</w:Card>
			<w:Card id="card3" baseUrl="./" manifest="{listContentManifests>/listCardWithProducts}">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="3" />
				</w:layoutData>
			</w:Card>
			<w:Card manifest="./cardsdemo/bundles/listQuickActions/manifest.json" action=".onAction">
			<w:layoutData>
				<f:GridContainerItemLayoutData columns="4" />
			</w:layoutData>
			</w:Card>
			<w:Card id="card4" manifest="./cardsdemo/cardcontent/listContent/quickActions.json" action=".onAction">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="4" />
				</w:layoutData>
			</w:Card>
			<w:Card id="card5" manifest="./cardsdemo/bundles/list/list.attributes.json">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="4" />
				</w:layoutData>
			</w:Card>
			<w:Card manifest="./cardsdemo/bundles/list/list.attributes.icon.chart.json">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="4" />
				</w:layoutData>
			</w:Card>
			<w:Card id="card6" manifest="./cardsdemo/bundles/list/list.attributes.actions.json">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="4" />
				</w:layoutData>
			</w:Card>
		</f:GridContainer>
	</Page>
</mvc:View>