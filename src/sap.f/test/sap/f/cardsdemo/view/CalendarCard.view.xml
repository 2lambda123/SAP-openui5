<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:w="sap.ui.integration.widgets"
	displayBlock="true">
	<Page title="{i18n>appTitle}">
		<subHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<Title text="Calendar Card"/>
				<ToolbarSpacer/>
			</Toolbar>
		</subHeader>

		<Panel>
			<HBox width="100%" renderType="Bare">
				<w:Card id="calendarCard" manifest="{manifests>/calendarCard/calendarCard}" width="100%" height="auto">
					<w:layoutData>
						<FlexItemData maxWidth="700px" />
					</w:layoutData>
				</w:Card>
			</HBox>
		</Panel>

	</Page>
</mvc:View>