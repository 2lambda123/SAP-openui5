<mvc:View xmlns:form="sap.ui.layout.form" xmlns:cssgrid="sap.ui.layout.cssgrid" xmlns:layout="sap.ui.layout"
	controllerName="sap.f.cardsdemo.controller.CardMeasurements"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:w="sap.ui.integration.widgets"
	displayBlock="true">
	<Page title="{i18n>appTitle}">
		<subHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<Title text="Card Performance Measurements" />
				<ToolbarSpacer/>
			</Toolbar>
		</subHeader>
		<layout:VerticalLayout class="sapUiSmallMargin">
			<FormattedText htmlText="To enable the measurements add &lt;strong&gt;sap-ui-measure=true&lt;/strong&gt; in the query string of the URL" class="sapUiTinyMarginBottom"></FormattedText>
			<MessageStrip text="This page is not optimized and the results should not be taken into account!" class="sapUiTinyMarginBottom"></MessageStrip>
			<Button text="Show Measurements" press=".showMeasurements"></Button>
		</layout:VerticalLayout>

		<dependents>
			<VBox id="measurementDetails">
				<Title text="{id}" wrapping="true"></Title>
				<HBox class="sapUiTinyMarginBottom">
					<Label text="Start Time" showColon="true" class="sapUiTinyMarginEnd" wrapping="true"/>
					<Text text="{start}" wrapping="false"/>
				</HBox>
				<HBox class="sapUiTinyMarginBottom">
					<Label text="Duration" showColon="true" class="sapUiTinyMarginEnd" wrapping="true"/>
					<Text text="{duration}" wrapping="false"/>
				</HBox>
				<HBox class="sapUiTinyMarginBottom">
					<Label text="Info" showColon="true" class="sapUiTinyMarginEnd" wrapping="true"/>
					<Text text="{info}" wrapping="true"/>
				</HBox>
			</VBox>
		</dependents>

		<cssgrid:CSSGrid class="sapUiSmallMargin" width="calc(100% - 2rem)">
			<cssgrid:customLayout>
				<cssgrid:GridBoxLayout boxMinWidth="20rem"></cssgrid:GridBoxLayout>
			</cssgrid:customLayout>
			<VBox>
				<VBox items="{ path: '/listCard/measurements', factory: '.measurementDetailsFactory' }"></VBox>
				<w:Card id="listCard" baseUrl="{cardsPlayground>/playgroundBaseUrl}" manifest="cardsdemo/bundles/listbundle/manifest.json"></w:Card>
			</VBox>
			<VBox>
				<VBox items="{ path: '/cardWithExtension/measurements', factory: '.measurementDetailsFactory' }"></VBox>
				<w:Card id="cardWithExtension" manifest="cardsdemo/bundles/cardWithExtension/manifest.json"></w:Card>
			</VBox>
			<VBox>
				<VBox items="{ path: '/tableCard/measurements', factory: '.measurementDetailsFactory' }"></VBox>
				<w:Card id="tableCard" baseUrl="{cardsPlayground>/playgroundBaseUrl}" manifest="cardsdemo/bundles/analyticalLine/manifest.json"></w:Card>
			</VBox>
		</cssgrid:CSSGrid>
	</Page>
</mvc:View>