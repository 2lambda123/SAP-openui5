{
	"sap.app": {
		"id": "cardsdemo.object.imageOnlyWithFooter",
		"type": "card"
	},
	"sap.card": {
		"type": "Object",
		"header": {
			"icon": {
				"src": "sap-icon://business-objects-experience"
			},
			"title": "Object Card",
			"subTitle": "With Image Only with Footer"
		},
		"content": {
			"groups": [
				{
					"alignment": "Stretch",
					"items": [
						{
							"type": "Image",
							"src": "../../images/grass.jpg",
							"fullWidth" : true
						}
					]
				}
			]
		},
		"footer": {
			"actionsStrip": [
				{
					"text": "Send Reminder",
					"buttonType": "Accept"
				}
			]
		}
	}
}