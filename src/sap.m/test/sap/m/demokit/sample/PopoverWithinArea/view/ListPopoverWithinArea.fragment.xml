<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="myListPopover"
		title="Products"
		contentHeight="500px"
		afterClose="handleAfterClose"
		placement="Left">
		<List
			id="list"
			items="{/ProductCollection}" >
			<StandardListItem
				title="{Name}"
				description="{ProductId}"
				type="Active"
				icon="{ProductPicUrl}"
				press="onNavToProduct"
				iconDensityAware="false"
				iconInset="false" />
		</List>
	</Popover>
</core:FragmentDefinition>