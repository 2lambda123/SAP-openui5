<mvc:View
		controllerName="sap.m.sample.simpleForm.Controller"
		xmlns="sap.m"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:form="sap.ui.layout.form"
		xmlns:core="sap.ui.core">
		<form:SimpleForm
				maxContainerCols="2"
				editable="true">

			<!-- Person section -->
			<core:Title text="Person" />

			<Label text="Name" labelFor="name"/>
			<Input id="name" value="Max" />

			<Label text="Date of birth" labelFor="dp"/>
			<DatePicker id="dp"/>

			<Label text="Gender" labelFor="rbg"/>
			<RadioButtonGroup id="rbg" columns="2">
				<RadioButton text="male" />
				<RadioButton text="female" />
			</RadioButtonGroup>

			<!-- Address section -->
			<core:Title text="Address" />

			<Label text="Street" labelFor="addr"/>
			<Input id="addr" value="Dietmar-Hopp-Allee" />

			<Label text="City" labelFor="city"/>
			<Input id="city" value="Sofia" />

			<Label text="Country" labelFor="country"/>
			<Input id="country" value="Bulgaria" />
		</form:SimpleForm>
</mvc:View>
