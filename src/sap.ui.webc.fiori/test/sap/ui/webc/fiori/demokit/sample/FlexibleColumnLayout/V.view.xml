<mvc:View controllerName="sap.ui.webc.fiori.sample.FlexibleColumnLayout.C" xmlns="sap.ui.webc.main" xmlns:fiori="sap.ui.webc.fiori" xmlns:mvc="sap.ui.core.mvc" height="100%">
    <Toast id="demoToast" duration="1000"></Toast>

    <fiori:Page>
        <fiori:header>
            <fiori:Bar>
                <fiori:middleContent>
                    <Title text="FlexibleColumnLayout"></Title>
                </fiori:middleContent>
            </fiori:Bar>
        </fiori:header>

        <fiori:content>
            <fiori:FlexibleColumnLayout layoutChange="handleLayoutChange">
                <fiori:endColumn><Button icon="employee" text="Some text..."></Button></fiori:endColumn>
                <fiori:midColumn><Button icon="employee" text="Some text..."></Button></fiori:midColumn>
                <fiori:startColumn><Button icon="employee" text="Some text..."></Button></fiori:startColumn>
            </fiori:FlexibleColumnLayout>
        </fiori:content>
    </fiori:Page>
</mvc:View>