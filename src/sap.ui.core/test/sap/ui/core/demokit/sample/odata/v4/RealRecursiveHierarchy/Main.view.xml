<mvc:View
	class="sapUiSizeCompact"
	controllerName="sap.ui.core.sample.odata.v4.RealRecursiveHierarchy.Main"
	xmlns="sap.ui.table"
	xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<TreeTable id="table" ariaLabelledBy="title"
		rows="{path : '/I_SADL_RS_HIERARCHY_SOURCE', parameters : {$count : false}, suspended : true}"
		selectionMode="None" threshold="0" visibleRowCount="5">
		<extension>
			<m:Toolbar design="Transparent" class="sapMTBHeader-CTX">
				<m:Title id="title" level="H1" text="SADL_RS_HIERARCHY"/>
				<m:ToolbarSpacer/>
				<m:SearchField placeholder="Description contains..." search="onFilter"
					value="{ui>/sFilter}" width="40%"/>
			</m:Toolbar>
		</extension>
		<Column template="Id">
			<m:Label text="ID"/>
		</Column>
		<Column template="ParentId">
			<m:Label text="Parent's ID"/>
		</Column>
		<Column template="Description">
			<m:Label text="Description"/>
		</Column>
		<Column template="Material">
			<m:Label text="Material"/>
		</Column>
		<Column template="Quantity">
			<m:Button icon="{ui>/sIcon}" iconFirst="false" press="onSort" text="Quantity"/>
		</Column>
		<Column template="QuantityUnit">
			<m:Label text="Unit"/>
		</Column>
	</TreeTable>

</mvc:View>
