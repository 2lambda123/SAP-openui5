<mvc:View
	class="sapUiSizeCompact"
	controllerName="sap.ui.core.sample.odata.v4.FieldGroups.FieldGroups"
	xmlns="sap.m"
	xmlns:core="sap.core"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<f:SimpleForm binding="{/ContactList(42010aef-0de5-1eea-af8f-5bce865f0879)}"
			editable="true" id="contact" layout="columnLayout" title="Field Groups"
			validateFieldGroup="onValidateFieldGroup">
		<Label labelFor="firstName" text="First Name"/>
		<!-- we use a description on the same property used for the value to check that rerendering
		does not trigger the batch without side effects request-->
		<Input fieldGroupIds="firstNameGroup" id="firstName" value="{FirstName}"
			   description="{FirstName}"/>
		<Label labelFor="lastName" text="Last Name"/>
		<Input fieldGroupIds="lastNameGroup" id="lastName" value="{LastName}"/>
		<Label labelFor="emailAddress" text="Email Address"/>
		<Input fieldGroupIds="emailAddressGroup" id="emailAddress" value="{EmailAddress}"/>
	</f:SimpleForm>
</mvc:View>
