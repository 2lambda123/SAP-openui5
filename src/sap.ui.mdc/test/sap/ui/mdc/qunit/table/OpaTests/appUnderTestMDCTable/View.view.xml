<mvc:View
    height="100%"
	xmlns:mdc="sap.ui.mdc"
	xmlns:mdcTable="sap.ui.mdc.table"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:variants="sap.ui.fl.variants"
	controllerName="sap.ui.mdc.tableOpaTests.appUnderTestMDCTable.Controller">
    <App id="FlexTestApp">
        <Page showHeader="false">
            <mdc:Table
                id="mdcTable"
                header="Products"
                showRowCount="true"
                showPasteButton="true"
                enableExport="true"
                beforeExport="onBeforeExport"
                delegate='\{ "name": "sap/ui/mdc/tableOpaTests/TableDelegate", "payload": \{ "collectionName": "ProductList" \} \}'
                selectionMode="Multi"
                p13nMode="Column,Sort,Filter,Group"
                height="100%"
                enableAutoColumnWidth="true">
                <mdc:type>
                    <mdc:table.ResponsiveTableType detailsButtonSetting="Low,None" showDetailsButton="true" />
                </mdc:type>
                <mdc:variant>
                    <variants:VariantManagement id="mdcTable-vm" for="mdcTable" />
                </mdc:variant>
                <mdc:columns>
                    <mdcTable:Column id="mdcTable-vm--mdcTable--CreatedAt" header="Created On" tooltip="Created On" propertyKey="CreatedAt" importance="Low">
                        <Text text="{CreatedAt}" />
                    </mdcTable:Column>
                    <mdcTable:Column id="mdcTable-vm--mdcTable--ProductID" header="Product ID" tooltip="Product ID" propertyKey="ProductID" importance="High">
                        <ObjectIdentifier title="{ProductID}" />
                    </mdcTable:Column>
                    <mdcTable:Column id="mdcTable-vm--mdcTable--Category" header="Category" propertyKey="Category" importance="Low">
                        <Text text="{Category}" />
                    </mdcTable:Column>
                    <mdcTable:Column id="mdcTable-vm--mdcTable--Name" header="Product Name" propertyKey="Name" importance="Low">
                        <Text text="{Name}" />
                    </mdcTable:Column>
                    <mdcTable:Column id="mdcTable-vm--mdcTable--SupplierName" header="Supplier" propertyKey="SupplierName" importance="Medium">
                        <Text text="{SupplierName}" />
                    </mdcTable:Column>
                    <mdcTable:Column id="mdcTable-vm--mdcTable--Price" header="Unit Price of the Product" propertyKey="Price" hAlign="Right" importance="High">
                        <u:Currency xmlns:u="sap.ui.unified" value="{Price}" currency="{CurrencyCode}" useSymbol="false" />
                    </mdcTable:Column>
                    <mdcTable:Column id="mdcTable-vm--mdcTable--WeightMeasure" header="Weight" propertyKey="WeightMeasure" hAlign="End" importance="Low">
                        <ObjectNumber number="{WeightMeasure}" emphasized="false" textAlign="End" unit="{WeightUnit}" />
                    </mdcTable:Column>
                    <mdcTable:Column id="mdcTable-vm--mdcTable--Width" header="Width" propertyKey="Width" hAlign="End" importance="Low">
                        <ObjectNumber number="{Width}" emphasized="false" textAlign="End" unit="{DimUnit}" />
                    </mdcTable:Column>
                    <mdcTable:Column id="mdcTable-vm--mdcTable--Depth" header="Depth" propertyKey="Depth" hAlign="End" importance="Low">
                        <ObjectNumber number="{Depth}" emphasized="false" textAlign="End" unit="{DimUnit}" />
                    </mdcTable:Column>
                    <mdcTable:Column id="mdcTable-vm--mdcTable--Height" header="Height" propertyKey="Height" hAlign="End" importance="Low">
                        <ObjectNumber number="{Height}" emphasized="false" textAlign="End" unit="{DimUnit}" />
                    </mdcTable:Column>
                </mdc:columns>
            </mdc:Table>
        </Page>
    </App>
</mvc:View>